<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313435"
    android:backgroundTint="#404040"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/editTextCurrentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounded_corners"
        android:drawableTint="#652222"
        android:fontFamily="@font/new_rocker"
        android:hint="Contraseña Actual"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="#2D2F31"
        android:textColorHighlight="#2D2F31"
        android:textColorHint="#2D2F31"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"

        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/new_rocker"
        android:hint="Nueva Contraseña"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="#393639"
        android:textColorHint="#2D2F31"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextConfirmNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/new_rocker"
        android:hint="Confirmar Contraseña"
        android:inputType="textPassword"
        android:padding="12dp"

        android:textColor="#FFFF00"
        android:textColorHint="#313435"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="16dp">


        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FEE800"
            android:fontFamily="@font/new_rocker"
            android:padding="12dp"
            android:text="Cancelar"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonChange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FEE800"
            android:fontFamily="@font/new_rocker"
            android:padding="12dp"
            android:text="Cambiar"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
